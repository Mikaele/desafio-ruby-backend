<%= form_for @archive, html: { multipart: true } do |form| %>
  <% if archive.errors.any? %>
     
        <% archive.errors.each do |error| %>
         <div class="alert alert-danger" role="alert"> Não foi pssível carregar seu arquivo, <%= error.full_message %></div>
        <% end %>
      
  <% end %>

  <div class="field">
    <%= form.file_field  :attachment, required: true  %>
  </div>

  <div class="actions">
    <%= form.submit 'Enviar', :class=>"btn btn-success"  %>
  </div>
<% end %>
